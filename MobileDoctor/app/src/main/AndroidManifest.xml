<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobiledoctor">

    <!-- 인터넷 및 위치 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Mobile Doctor"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileDoctor">   <!-- ← 여기를 Material3 테마로 변경 -->


        <!-- Maps SDK for Android (앱 패키지+SHA-1 제한) -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <!-- Places Web Service (HTTP referrer 제한 or none) -->
        <meta-data
            android:name="com.example.mobiledoctor.PLACES_API_KEY"
            android:value="${PLACES_API_KEY}" />

        <!-- 앱 시작 시 Splash 화면 -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 나머지 액티비티들 -->
        <activity android:name=".MainActivity" android:exported="true" />
        <activity android:name=".SymptomSearchActivity" android:exported="true" />
        <activity android:name=".MapActivity" android:exported="true" />
        <activity android:name=".InventoryActivity" android:exported="false"/>

    </application>

</manifest>
