<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ① 툴바 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_symptom_search"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:menu="@menu/menu_symptom_search"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="증상별 약 검색"
        app:titleTextColor="@color/black" />

    <!-- ② 본문은 툴바 아래로 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="?attr/actionBarSize">

        <!-- 병원 및 약국 섹션 -->
        <TextView
            android:id="@+id/nearby_hospitals_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"
            android:text="1km 내 병원"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nearby_hospitals_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="병원 수: 0"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <ListView
            android:id="@+id/list_nearby_hospitals"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/no_hospitals_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="근처 병원이 없습니다."
            android:textColor="#ff0000"
            android:textSize="16sp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#dcdcdc" />

        <TextView
            android:id="@+id/nearby_pharmacies_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"
            android:text="1km 내 약국"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nearby_pharmacies_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="약국 수: 0"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <ListView
            android:id="@+id/list_nearby_pharmacies"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/no_pharmacies_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="근처 약국이 없습니다."
            android:textColor="#ff0000"
            android:textSize="16sp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#dcdcdc" />

        <!-- 계열별 약 검색 수 -->
        <TextView
            android:id="@+id/medicine_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:text="계열별 약 검색 수: 0"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:prompt="@string/category_prompt" />

        <Spinner
            android:id="@+id/spinner_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:prompt="@string/symptom_prompt" />

        <ListView
            android:id="@+id/list_results"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="16dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:paddingTop="16dp" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
